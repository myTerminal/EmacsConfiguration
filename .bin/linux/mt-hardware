#!/usr/bin/env bash

# Detect display and set prompter
. ~/.assets/libs/bash/select-prompter

# Prompt for a choice
mt_menu=$(echo -e "bluetooth\nbrightness\nproject screen\ngpu" | ${mt_prompter})

# Spawn the appropriate menu based on choice
case "${mt_menu}" in
    "bluetooth")
        mt-bluetooth
        ;;

    "brightness")
        mt-brightness-mode
        ;;

    "project screen")
        mt-display-mode
        ;;

    "gpu")
        mt-gpu-mode
        ;;

    *)
        echo "Not implemented!"
        ;;
esac
