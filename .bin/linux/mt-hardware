#!/usr/bin/env bash

mt_menu=$(echo -e "brightness\ndisplay\ngpu\nbluetooth" | rofi -dmenu)

case "${mt_menu}" in
    "brightness")
        mt-brightness-mode
        ;;

    "display")
        mt-display-mode
        ;;

    "gpu")
        mt-gpu-mode
        ;;

    "bluetooth")
        mt-bluetooth
        ;;

    *)
        echo "Not implemented!"
        ;;
esac
