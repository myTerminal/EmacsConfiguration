#!/usr/bin/env bash

command=${1}

if [ "${command}" == "do" ]; then
    operation=${2}
    arguments=${@:3}
    filename="${arguments%%.*}"

    case "${operation}" in
        zip)
            zip -r "${filename}.zip" $arguments
            ;;

        tar)
            tar -cvzf "${filename}.tar.gz" $arguments
            ;;

        *)
            echo "Not implemented!"
            ;;
    esac
elif [ "${command}" == "undo" ]; then
     arguments=${@:2}
     extension=${arguments#*.}

     case "${extension}" in
         zip)
             unzip "${arguments}"
             ;;

         tar)
             tar -xvzf "${arguments}"
             ;;

         tar.gz)
             gz -dk "${arguments}"
             ;;

         rar)
             unrar e "${arguments}"
             ;;

         7z)
             7zip e "${arguments}"
             ;;

         *)
             echo "Not implemented!"
             ;;
     esac
else
    echo "Not implemented!"
fi
