#!/usr/bin/env bash

# Execute device-specific scripts
case "${HOSTNAME}" in
    polaris)
        brightnessctl s 30%
        ;;

    *)
        # Nothing here yet
        ;;
esac

# Pick a random wallpaper from the collection
fd . ~/_store/Mobile-Media/Wallpapers/ -t f -0 | shuf -n1 -z | xargs -0 feh --bg-fill
