#!/usr/bin/env bash

~/.bin/linux/mt-set-random-wallpaper

if [ "$XDG_SESSION_TYPE" == "wayland" ]; then
    gsettings set org.gnome.desktop.interface gtk-theme 'Obsidian-2-Gray'
    gsettings set org.gnome.desktop.interface icon-theme 'Obsidian-Sand'
    gsettings set org.gnome.desktop.interface cursor-theme 'Bibata-Original-Classic'
    gsettings set org.gnome.desktop.interface font-name 'Open Sans 10'
fi
